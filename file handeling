#include <iostream>
#include <fstream>
using namespace std;

class Employee {
    char name[20];
    int emp_id;
    float salary;
public:
    void accept() {
        cin >> name >> emp_id >> salary;
    }
    void display() const {
        cout << name << "\t" << emp_id << "\t" << salary << endl;
    }
};

int main() {
    Employee employees[5];
    fstream file;
    int n;

    cout << "How many employee information wanted to store: ";
    cin >> n;

    file.open("employee.txt", ios::out);
    cout << "Enter information of " << n << " employees (name, emp_id, salary):" << endl;
    for (int i = 0; i < n; ++i) {
        cout << "Enter information of employee " << i + 1 << ": ";
        employees[i].accept();
        file.write(reinterpret_cast<char*>(&employees[i]), sizeof(employees[i]));
    }
    file.close();

    file.open("employee.txt", ios::in);
    cout << "\nInformation of employees is as follows:" << endl;
    for (int i = 0; i < n; ++i) {
        file.read(reinterpret_cast<char*>(&employees[i]), sizeof(employees[i]));
        employees[i].display();
    }
    file.close();

    return 0;
}
